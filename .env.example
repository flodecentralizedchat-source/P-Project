# Core database connections
DATABASE_URL=mysql://user:password@mysql/p_project

# Multi-EVM configuration (comma-separated names)
# Options: ethereum,polygon,bsc,arbitrum,optimism
EVM_NETWORKS=ethereum,polygon,bsc,arbitrum,optimism

# Ethereum (EVM) â€” per-network settings (mainnet)
# Each <NAME> corresponds to an entry in EVM_NETWORKS (case-insensitive)
# Required per network
EVM_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/<project-id>
EVM_ETHEREUM_BRIDGE_ADDRESS=0xYourEthereumBridge
EVM_ETHEREUM_TOKEN_ADDRESS=0xYourEthereumToken

EVM_POLYGON_RPC_URL=https://polygon-rpc.com
EVM_POLYGON_BRIDGE_ADDRESS=0xYourPolygonBridge
EVM_POLYGON_TOKEN_ADDRESS=0xYourPolygonToken

EVM_BSC_RPC_URL=https://bsc-dataseed.binance.org/
EVM_BSC_BRIDGE_ADDRESS=0xYourBscBridge
EVM_BSC_TOKEN_ADDRESS=0xYourBscToken

EVM_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
EVM_ARBITRUM_BRIDGE_ADDRESS=0xYourArbitrumBridge
EVM_ARBITRUM_TOKEN_ADDRESS=0xYourArbitrumToken

EVM_OPTIMISM_RPC_URL=https://mainnet.optimism.io
EVM_OPTIMISM_BRIDGE_ADDRESS=0xYourOptimismBridge
EVM_OPTIMISM_TOKEN_ADDRESS=0xYourOptimismToken

# Private key handling
# Adapters default to ETH_PRIVATE_KEY; you can override per network via EVM_<NAME>_PRIVATE_KEY_ENV
ETH_PRIVATE_KEY=0xabc123... # DO NOT COMMIT REAL KEYS

# Legacy single-Ethereum fallback (optional)
# ETH_RPC_URL=...
# ETH_BRIDGE_ADDRESS=...
# ETH_TOKEN_ADDRESS=...
# ETH_PRIVATE_KEY_ENV=ETH_PRIVATE_KEY
# ETH_CONFIRMATIONS=3

# Non-EVM (optional)
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_BRIDGE_PROGRAM=YourSolanaProgramId
# SOLANA_KEYPAIR_PATH=/secrets/solana/id.json
# SOLANA_CONFIRMATIONS=10

# SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
# SUI_BRIDGE_PACKAGE=0xYourSuiPackage
# SUI_KEY=your-sui-key
# SUI_CONFIRMATIONS=2

# --- Testnet examples ---
# To use testnets, set EVM_NETWORKS accordingly, e.g.:
# EVM_NETWORKS=sepolia,amoy,arbitrum_sepolia,optimism_sepolia

# RPC URLs used by Hardhat (contracts) and can also be used by relayer if desired
SEPOLIA_URL=https://sepolia.infura.io/v3/<project-id>
AMOY_URL=https://rpc-amoy.polygon.technology
ARBITRUM_SEPOLIA_URL=https://sepolia-rollup.arbitrum.io/rpc
OPTIMISM_SEPOLIA_URL=https://sepolia.optimism.io

# Per-network EVM adapter config (testnets)
EVM_SEPOLIA_RPC_URL=${SEPOLIA_URL}
EVM_SEPOLIA_BRIDGE_ADDRESS=0xYourSepoliaBridge
EVM_SEPOLIA_TOKEN_ADDRESS=0xYourSepoliaToken

EVM_AMOY_RPC_URL=${AMOY_URL}
EVM_AMOY_BRIDGE_ADDRESS=0xYourAmoyBridge
EVM_AMOY_TOKEN_ADDRESS=0xYourAmoyToken

EVM_ARBITRUM_SEPOLIA_RPC_URL=${ARBITRUM_SEPOLIA_URL}
EVM_ARBITRUM_SEPOLIA_BRIDGE_ADDRESS=0xYourArbitrumSepoliaBridge
EVM_ARBITRUM_SEPOLIA_TOKEN_ADDRESS=0xYourArbitrumSepoliaToken

EVM_OPTIMISM_SEPOLIA_RPC_URL=${OPTIMISM_SEPOLIA_URL}
EVM_OPTIMISM_SEPOLIA_BRIDGE_ADDRESS=0xYourOptimismSepoliaBridge
EVM_OPTIMISM_SEPOLIA_TOKEN_ADDRESS=0xYourOptimismSepoliaToken

# --- API Security & Compliance ---
# JWT secret for protected endpoints
JWT_SECRET=change_me_jwt_secret

# CORS configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# Request body limit (bytes)
MAX_REQUEST_BYTES=1048576

# Rate limiting (standard)
RATE_LIMIT_MAX=120
RATE_LIMIT_WINDOW_SECS=60

# Rate limiting (strict) for sensitive routes
STRICT_RATE_LIMIT_MAX=20
STRICT_RATE_LIMIT_WINDOW_SECS=60

# Webhook token gating for chat bots and generic webhooks
WEBHOOK_TOKEN=change_me_webhook
TELEGRAM_WEBHOOK_TOKEN=
DISCORD_WEBHOOK_TOKEN=

# Admin IP allowlist (comma-separated). If empty, all IPs allowed.
ADMIN_IP_ALLOWLIST=

# Compliance blocklists (comma-separated)
WALLET_BLOCKLIST=0x0000000000000000000000000000000000000000
USERNAME_BLOCKLIST=admin,root,system
